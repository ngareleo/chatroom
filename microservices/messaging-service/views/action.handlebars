<div class="container">
  <div class="logo-container">
    <img
      src="images/sociallyKay-logos_white(1).png"
      class="logo"
      width="125"
      height="30"
    />
  </div>
  <div class="main-container">
    <div class="user-area">
      <div class="user-header">
        <h3>People</h3>
      </div>
      {{#if user1}}
        <div class="user-select" onclick="window.location = '/user2'">
          <div class="user-picture">
            <img src="images/member-7.png" width="50" height="50" />
          </div>
          <a href="/user2">User Two</a>
        </div>
      {{else}}
        <div class="user-select" onclick="window.location = '/user1'">
          <div class="user-picture">
            <img src="images/member-1.png" width="50" height="50" />
          </div>
          <a href="/user1">User One</a>
        </div>
      {{/if}}

    </div>
    <div class="chat-area">
      <div class="header">
        <div class="user-profile">
          <div class="holder-container">
            <div class="icon">
              <img src={{profile}} width="130" height="130" />
            </div>
            <div class="name">
              <p>{{username}}</p>
            </div>
          </div>
          <div class="status">
            {{#if user1}}
              <p id="status">User Two is offline</p>
            {{else}}
              <p id="status">User One is offline</p>
            {{/if}}
          </div>
        </div>
      </div>
      <div class="chat-container">
      </div>
      <div class="footer">
        <form action="/{{user}}" method="post" id="form">
          <input
            type="text"
            name="chat"
            id="chat"
            placeholder="Say something clean"
            autocomplete="off"
          />
          <button id="send-button">Yeet</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/javascripts/action.js"></script>